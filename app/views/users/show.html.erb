<h1><%= current_user.email %></h1>

<%= link_to "Edit User", edit_user_path(current_user), class: "btn btn-block btn-info" %>
<%= link_to "Delete User", user_path(current_user), method: :delete, class: "btn btn-block btn-danger", data: { confirm: "Are you sure?" } %>
<%= link_to "Sign Out", sign_out_path, method: :delete, class: "btn btn-block btn-warning" %>